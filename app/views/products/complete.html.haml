.purchase_header
  .purchase_header__logo
    = link_to root_path do
      = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1248199994", class:"logo"
.purchase_contain_super
  .purchase_contain
    .purchase_contain__upper
      %ul
        %li.message_upper
          .left_box
            = fa_icon("clock")
          .right_box
            発送をお待ちください
        %li.message_lower
          出品者からの発送通知をお待ちください
    .purchase_contain__center
      .complate_message
        購入完了しました
      .product_box
        .product_image
          .image{style: "background-image: url(#{@product.product_images[0].image})"}
        .product_name
          = @product.name
      .product_price
        = "￥#{@product.price.to_s(:delimited)}"
          

