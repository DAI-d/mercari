= render '././shared/header'
.mypage-area
  .mypage__content
    .mypage--left
      =render "side_bar"
    .mypage--right
      .my-page-container
        .my-page-container--upper
          %h2 発送元・お届け先住所入力
        .my-page-container--lower
          .my-page-container--lower--inner
            = form_for "" do |f|
              .null-null
                %h5 お名前
                %span.null-false 必須
              = f.text_field :last_name, placeholder: "例)山田"
              = f.text_field :first_name, placeholder: "例)太郎"
              .null-null
                %h5 お名前カナ(全角)
                %span.null-false 必須
              = f.text_field :last_name_kana, placeholder: "例)ヤマダ"
              = f.text_field :first_name_kana, placeholder: "例)タロウ"
              .null-null
                %h5 郵便番号
                %span.null-false 必須
              = f.email_field :email, placeholder: "例)123-4567"
              .null-null
                %h5 都道府県
                %span.null-false 必須
              = f.password_field :password, placeholder: "選ばせる"
              .null-null
                %h5 市区町村
                %span.null-false 必須
              = f.password_field :password, placeholder: "例)横浜市緑区"
              .null-null
                %h5 番地 
                %span.null-false 必須
              = f.text_field :last_name, placeholder: "例)青山1-1-1"
              .null-null
                %h5 建物名 
                %span.null-false 必須
              = f.text_field :last_name, placeholder: "例)柳ビル103"
              .null-null
                %h5 電話
                %span.null-false 必須
              = f.text_field :last_name, placeholder: "例)09012345678"
              = f.button "次へ進む", class:"button"